extends layout 

block content 
    div.wrapper
        h1= title 

        div.list-wrapper
            each item in item_list 
                div.list-card
                    a(href=item.url) 
                        img(crossorigin="anonymous" src=item.src).list-card-img
                        div.list-card-title #{item.name}
                        div.list-card-category #{item.category.name}
                        div.list-card-desc #{item.desc}
                        div.list-card-price 
                            img(crossorigin="anonymous" src='/images/rs.png').rupees-icon
                            | #{item.price}

            else 
                p There are no items.

        hr
    p.hero-buttons
        a(href='/item/create') Create item